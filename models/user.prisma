enum Role {
  ADMIN
  USER
  MANAGER
  GUEST
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
  SUSPENDED
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  customId    String   @unique
  name        String
  email       String   @unique
  password    String
  role        Role
  status      Status
  lastLogin   DateTime?
  department  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}